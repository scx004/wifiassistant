<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="5dip"
    android:paddingRight="5dp"
    android:background="@drawable/table_odd_lines"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        android:gravity="left"
        android:text="@string/string_no"
        android:textColor="@color/red_color" />

    <ImageView
        android:id="@+id/imageViewStatusPing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        android:src="@drawable/zhuangtai" />

    <TextView
        android:id="@+id/textViewIp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="IP"
        android:textColor="@color/green_color" />
    <TextView
        android:id="@+id/textViewLossRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:gravity="right"
        android:text="@string/losslv"
        android:textColor="@color/green_color" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:gravity="right"
        android:text="@string/timedelay"
        android:textColor="@color/green_color" />

</LinearLayout>